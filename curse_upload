#!/bin/bash

FILE_NAME=`echo "OreExcavation-CI_MOD_VERSION.jar"`
FILE_LOCATION=`echo "./build/libs/$FILE_NAME"`
CHANGE_LOG=`git log $DRONE_BRANCH -1 --pretty=format:"%B"`

#See https://github.com/curseforge/api for how to retrieve game version numbers
JSON=`printf '{"changelog": "%s", "gameVersions": [6452], "releaseType": "release"}' "$CHANGE_LOG"`

echo "Uploading $FILE_NAME to Curse Forge..."
echo
RESPONSE=`curl -H "X-Api-Token: $CURSE_API_KEY" -X POST  -F metadata="$JSON"  -F file="@$FILE_LOCATION" https://minecraft.curseforge.com/api/projects/250898/upload-file`
echo
FID=${RESPONSE:6}
FID=${FID:0:${#FID}-1}
echo "Parent file ID: $FID"

JSON=`printf '{"changelog": "%s", "parentFileID": %s, "releaseType": "release"}' "$CHANGE_LOG" "$FID"`

FILE_NAME=`echo "OreExcavation-deobf-CI_MOD_VERSION.jar"`
FILE_LOCATION=`echo "./build/libs/$FILE_NAME"`

echo "Uploading $FILE_NAME to Curse Forge..."
echo
RESPONSE=`curl -H "X-Api-Token: $CURSE_API_KEY" -X POST  -F metadata="$JSON"  -F file="@$FILE_LOCATION" https://minecraft.curseforge.com/api/projects/250898/upload-file`

FILE_NAME=`echo "OreExcavation-CI_MOD_VERSION-sources.jar"`
FILE_LOCATION=`echo "./build/libs/$FILE_NAME"`

echo "Uploading $FILE_NAME to Curse Forge..."
echo
RESPONSE=`curl -H "X-Api-Token: $CURSE_API_KEY" -X POST  -F metadata="$JSON"  -F file="@$FILE_LOCATION" https://minecraft.curseforge.com/api/projects/250898/upload-file`